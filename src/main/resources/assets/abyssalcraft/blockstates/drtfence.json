{
    "multipart": [
        {   "apply": { "model": "abyssalcraft:drtfence_post" }},
        {   "when": { "north": "true" },
            "apply": { "model": "abyssalcraft:drtfence_side", "uvlock": true }
        },
        {   "when": { "east": "true" },
            "apply": { "model": "abyssalcraft:drtfence_side", "y": 90, "uvlock": true }
        },
        {   "when": { "south": "true" },
            "apply": { "model": "abyssalcraft:drtfence_side", "y": 180, "uvlock": true }
        },
        {   "when": { "west": "true" },
            "apply": { "model": "abyssalcraft:drtfence_side", "y": 270, "uvlock": true }
        }
    ]
}
